{
  "compilerOptions": {
    "target": "ES2020", // Alvo de versão ECMAScript
    "module": "commonjs", // Sistema de módulos para Node.js
    "outDir": "./dist", // Diretório de saída para arquivos compilados
    "rootDir": "./src", // Diretório raiz dos arquivos de origem
    "strict": true, // Ativa todas as verificações estritas
    "esModuleInterop": true, // Habilita a interoperabilidade de módulos ES
    "skipLibCheck": true, // Pular a checagem dos arquivos de definição de biblioteca
    "forceConsistentCasingInFileNames": true, // Garante que os nomes dos arquivos são consistentes
    "resolveJsonModule": true // Permite importar módulos JSON
  },
  "include": ["src/**/*"], // Inclui todos os arquivos TypeScript no diretório src
  "exclude": ["node_modules", "**/*.test.ts"] // Exclui node_modules e arquivos de teste
}
